<div class="mx-auto md:w-2/3 w-full flex">
  <!-- <div class="mx-auto"> -->
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @restaurant %>

    <%= link_to 'Edit this restaurant', edit_restaurant_path(@restaurant), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this restaurant', restaurant_path(@restaurant), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to restaurants', restaurants_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <!-- </div> -->

  <h4>Comments</h4>
  <% if user_signed_in? %>
    <%= render partial: "comments/form", locals: { comment: Comment.new, commentable: @restaurant } %>
  <% else %>
    <%= link_to "Log in", new_user_session_path %> or <%= link_to "Sign up", new_user_registration_path %> to comment.
  <% end %>

  <%= turbo_stream_from @restaurant, :comments %>

  <%= tag.div id: "#{dom_id(@restaurant)}_comments" do %>
    <%= render @restaurant.comments %>
  <% end %>
</div>
